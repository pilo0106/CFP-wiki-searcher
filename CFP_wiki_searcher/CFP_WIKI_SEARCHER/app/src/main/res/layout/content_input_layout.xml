<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/contentText_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="contentText_name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contentText_url"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="contentText_url"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_nameList" />

    <EditText
        android:id="@+id/contentText_notiDue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="contentText_notiDue"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_url" />

    <EditText
        android:id="@+id/contentText_fvDue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="contentText_fvDue"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_notiDue" />

    <EditText
        android:id="@+id/contentText_content"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:ems="10"
        android:hint="contentText_content"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_fvDue" />

    <Button
        android:id="@+id/contentText_btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="add_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_content" />

    <ListView
        android:id="@+id/lv_contentText"
        android:layout_width="0dp"
        android:layout_height="290dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_btn_add" />

    <EditText
        android:id="@+id/contentText_nameList"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="contentText_nameList"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentText_name" />
</androidx.constraintlayout.widget.ConstraintLayout>